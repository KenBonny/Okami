---
import "../styles/global.css"
import { Image } from 'astro:assets';
import okamiImage from "../assets/okami.png";

const today = new Date();
---

<html lang="en">
<head>
    <meta charset="utf-8"/>
    <link rel="icon" href="/okami.ico"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="generator" content={Astro.generator}/>
    <title>Okami</title>
</head>
<body class="min-h-screen flex flex-col">
<main class="flex-1 pb-16">
    <section class="m-auto flex max-w-screen-2xl grow flex-col justify-center lg:flex-row">
        <div class="flex h-full flex-col items-center md:min-w-[589px]">
            <Image src={okamiImage}
                   priority
                   height="250"
                   width="250"
                   class="pt-6 lg:mb-0 lg:h-auto lg:w-[250px] lg:pt-12"
                   alt="A cute stylized orange and yellow dragon representing Okami"/>
        </div>
        <div class="flex flex-1 flex-col items-center gap-12 py-12 text-center md:gap-8 lg:items-start lg:py-16 lg:pb-0 lg:text-start xl:pt-24 2xl:gap-12 px-3 sm:px-8 lg:px-16 xl:px-32">
            <div class="flex max-w-lg flex-col gap-6 text-center">
                <a href="/"><h1>Okami</h1></a>
                <a href="/about" class="text-2xl font-normal leading-7">The dragon that guards your freezer!</a>
            </div>
        </div>
    </section>
    <hr class="border-gray-900/10"/>
    <div class="m-auto md:max-w-4xl lg:max-w-max">
        <slot/>
    </div>
</main>
<footer class="fixed bottom-0 left-0 right-0 z-10 h-16 w-full bg-white border-t border-gray-900/10 mt-auto dark:border-white/10">
    <div class="my-4 mx-auto max-w-4xl lg:max-w-max">
        <p class="text-sm/6 text-gray-600 dark:text-gray-400">
            &copy; {today.getFullYear()} More Than Code BV. Check out the <a href="/about">Privacy Policy</a> here.
        </p>
    </div>
</footer>
</body>
</html>